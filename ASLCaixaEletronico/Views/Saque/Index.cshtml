@model SaqueViewModel
@{
    ViewData["Title"] = "Saque de Cédulas";
}

<style>
    .option-card:hover {
        transform: scale(1.03);
        box-shadow: 0 0 15px rgba(0,0,0,0.2);
    }

    #feedbackModal .modal-content {
        border-radius: 1rem;
        box-shadow: 0 0 25px rgba(0, 255, 0, 0.2);
        animation: fadeIn 0.4s ease;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.95);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }


</style>


<div class="container mt-5">
    <h2 class="mb-4">Simulador de Saque</h2>

    <form method="post">
        <div class="form-group mb-3">
            <label>Valor do Saque:</label>
            <input asp-for="Valor" class="form-control" placeholder="Ex: 100" />
        </div>
        <button type="submit" class="btn btn-primary">Calcular</button>
    </form>

    @if (Model.MensagemErro != null)
    {
        <div class="alert alert-danger mt-4">@Model.MensagemErro</div>
    }

    @if (Model.CombinacoesDetalhadas != null && Model.CombinacoesDetalhadas.Any())
    {
        <div class="mt-4">
            <h4>Combinações possíveis:</h4>
            <div class="row mt-3">
                @for (int i = 0; i < Model.CombinacoesDetalhadas.Count; i++)
                {
                    var combinacao = Model.CombinacoesDetalhadas[i];
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm h-100 option-card"
                             data-sel="@i"
                             data-descricao="@string.Join(", ", combinacao.Select(c => $"{c.Value}x{c.Key}"))"
                             style="cursor:pointer; transition:transform 0.2s;">
                            <div class="card-body text-center">
                                <h5 class="mb-3">Opção @(i + 1)</h5>
                                @foreach (var nota in combinacao)
                                {
                                    var valorNota = nota.Key;
                                    var quantidade = nota.Value;
                                    <div class="d-flex align-items-center justify-content-center mb-2">
                                        <img src="~/imagens/cedula/@(valorNota).png"
                                             asp-append-version="true"
                                             alt="Cédula de R$ @valorNota"
                                             style="width:120px; height:auto; border-radius:5px; margin-right:8px;" />
                                        <span class="fw-bold">x @quantidade</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <div class="modal fade" id="confirmacaoModal" tabindex="-1" aria-labelledby="confirmacaoModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="confirmacaoModalLabel">Confirmação de Saque</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    <p class="text-muted mb-0">Você selecionou: <strong id="opcaoEscolhidaTexto"></strong></p>
                    Tem certeza que deseja sacar estas cedulas?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Não</button>
                    <button type="button" class="btn btn-success" id="btnConfirmarSaque">Sim</button>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="feedbackModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center">
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <h5 class="text-success">Saque realizado com sucesso</h5>
                    <p class="text-muted mb-0">Retornando à tela inicial...</p>
                </div>
            </div>
        </div>
    </div>



    @section Scripts {
        <script>
            let opcaoSelecionada = null;

            document.querySelectorAll('.option-card').forEach(card => {
                card.addEventListener('click', function () {
                    opcaoSelecionada = this.getAttribute('data-descricao');
                    document.getElementById('opcaoEscolhidaTexto').textContent = opcaoSelecionada;

                    const modal = new bootstrap.Modal(document.getElementById('confirmacaoModal'));
                    modal.show();
                });
            });

            document.getElementById('btnConfirmarSaque').addEventListener('click', function () {
                const modalEl = document.getElementById('confirmacaoModal');
                const modal = bootstrap.Modal.getInstance(modalEl);
                modal.hide();

                const feedbackModal = new bootstrap.Modal(document.getElementById('feedbackModal'));
                feedbackModal.show();
                
                setTimeout(() => {
                    feedbackModal.hide();
                    window.location.href = '/Saque';
                }, 3000);
            });
        </script>
    }

</div>
